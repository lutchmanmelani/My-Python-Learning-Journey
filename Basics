#Variables
message = "Hello"
print(message)

#Strings (Changing case in a string)
name = "ada lovelace"
print(name.title())
#Title
print(name.upper())
#Upper
print(name.lower())
#Lower

#Combining or concatenating strings
first_name = "ada"
last_name = "lovelace"
full_name = first_name + " " + last_name
print(full_name)
print("Hello, " + full_name.title() + " ! ")


message = "Hello, " + full_name.title() + " ! "
print(message)

#Adding white space to strings with tabs or newlines
print("Python")
#Tabbed
print("\t Python")
#Newline
print("Languages: \n Python \n C \n Java")
#Combine newline & Tab
print("Languages: \n \t Python \n \t C")
